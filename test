=IF(
  AND(ISNUMBER(--LEFT(TRIM(F41),1)), ISNUMBER(MATCH(RIGHT(TRIM(F41),2),{" L"," M"," H"},0))),
  TRIM(F41),
  IF(
    AND(ISNUMBER(--LEFT(TRIM(F41),1)), NOT(ISNUMBER(MATCH(RIGHT(TRIM(F41),2),{" L"," M"," H"},0))), ISNUMBER(--LEFT(TRIM(F42),1)), ISNUMBER(MATCH(RIGHT(TRIM(F42),2),{" L"," M"," H"},0))),
    TRIM(F41)&" "&TRIM(F42),
    IF(
      AND(ISNUMBER(--LEFT(TRIM(F41),1)), NOT(ISNUMBER(MATCH(RIGHT(TRIM(F41),2),{" L"," M"," H"},0))), NOT(ISNUMBER(--LEFT(TRIM(F42),1))), NOT(ISNUMBER(MATCH(RIGHT(TRIM(F42),2),{" L"," M"," H"},0))), NOT(ISNUMBER(--LEFT(TRIM(F43),1))), ISNUMBER(MATCH(RIGHT(TRIM(F43),2),{" L"," M"," H"},0))),
      TRIM(F41)&" "&TRIM(F42)&" "&TRIM(F43),
      ""
    )
  )
)
