Public Sub RunSheetMacro(ByVal publicProc As String, ParamArray args() As Variant)
    Dim m As String: m = "'" & ThisWorkbook.Name & "'!" & publicProc
    On Error Resume Next
    Select Case UBound(args)
        Case -1: Application.Run m
        Case 0:  Application.Run m, args(0)
        Case 1:  Application.Run m, args(0), args(1)
        Case Else
            ' Pass array as a single argument to preserve all params
            Application.Run m, args
    End Select
    If Err.Number <> 0 Then
        Debug.Print "[MAIN] Failed Application.Run -> "; m; " | Err:"; Err.Number; " "; Err.Description
        Err.Clear
    End If
    On Error GoTo 0
End Sub
