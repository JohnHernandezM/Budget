===============================================================================================================================================
[Q2] - FIXED ******** DAYS
===============================================================================================================================================

=LET(
  rowStart, 4,
  rowEnd, MAX(rowStart, LOOKUP(2, 1/(J:J<>""), ROW(J:J))),
  rng, INDEX(J:J, rowStart):INDEX(J:J, rowEnd),
  maxN, MAX(rng),
  nums, maxN*2 + 1,
  total, 2*nums,
  seq, SEQUENCE(1, total),
  IF(ISODD(seq), "Day " & (seq+1)/2, "")
)

===============================================================================================================================================
-
-
-
-
===============================================================================================================================================
[Q3] - FIXED ***** ACTION/DONE
===============================================================================================================================================

=LET(
  rowStart, 4,
  rowEnd, MAX(rowStart, LOOKUP(2, 1/(J:J<>""), ROW(J:J))),
  rng, INDEX(J:J, rowStart):INDEX(J:J, rowEnd),
  maxN, MAX(rng),
  nums, maxN*2 + 1,
  total, 2*nums,
  seq, SEQUENCE(1, total),
  IF(ISODD(seq), "[ Action ]", "Done")
)

===============================================================================================================================================
[P] - ALL ******** BOOL ICON
===============================================================================================================================================

=LET(
  h, ROWS(M11#),
  sel, O11:INDEX(O:O, ROW(O11)+h-1),
  IF(M11#<>"",
     IF(sel="","", IF(sel="Yes","☑","☐")),
     ""
  )
)

