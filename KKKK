===============================================================================================================================================
[M] - ALL ******** NBR
===============================================================================================================================================

=IF(L11<>"", LET(
  parts, TEXTSPLIT(TRIM(L11), ",", , TRUE),
  tok,   FILTER(TRIM(parts), TRIM(parts)<>""),
  desc,  SORTBY(tok, VALUE(tok), -1),
  TRANSPOSE(desc) & ":"
), "")

